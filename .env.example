# Django Backend Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://dev_user:dev_password@localhost:5433/eldonia_nex_dev
DB_NAME=eldonia_nex_dev
DB_USER=dev_user
DB_PASSWORD=dev_password
DB_HOST=localhost
DB_PORT=5433

# Redis Configuration
REDIS_URL=redis://:dev_redis@localhost:6380/0
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=dev_redis

# Celery Configuration
CELERY_BROKER_URL=redis://:dev_redis@localhost:6380/0
CELERY_RESULT_BACKEND=redis://:dev_redis@localhost:6380/0

# Email Configuration (Development)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# File Storage Configuration
# Local Development
MEDIA_URL=/media/
MEDIA_ROOT=./media
STATIC_URL=/static/
STATIC_ROOT=./staticfiles

# S3 Configuration (for MinIO in development)
USE_S3=False
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
AWS_STORAGE_BUCKET_NAME=eldonia-nex-dev
AWS_S3_ENDPOINT_URL=http://localhost:9000
AWS_S3_REGION_NAME=us-east-1

# External APIs
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Social Authentication
GOOGLE_OAUTH2_CLIENT_ID=your_google_client_id
GOOGLE_OAUTH2_CLIENT_SECRET=your_google_client_secret

TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# Next.js Frontend Settings
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here

# Development Tools
DJANGO_SETTINGS_MODULE=eldonia_nex.settings.development
NODE_ENV=development

# Security Settings (Development)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=./logs/eldonia_nex.log

# Feature Flags
ENABLE_DEBUG_TOOLBAR=True
ENABLE_PROFILING=False
ENABLE_CACHING=True

# Multi-language Support
DEFAULT_LANGUAGE=ja
SUPPORTED_LANGUAGES=ja,en,ko,zh-hans,vi

# Currency Support  
DEFAULT_CURRENCY=JPY
SUPPORTED_CURRENCIES=JPY,USD,EUR,KRW,CNY,VND

# Rate Limiting
RATE_LIMIT_ANON=100/hour
RATE_LIMIT_USER=1000/hour
RATE_LIMIT_UPLOAD=10/hour

# File Upload Limits (in bytes)
MAX_UPLOAD_SIZE_FREE=10485760      # 10MB
MAX_UPLOAD_SIZE_STANDARD=52428800   # 50MB  
MAX_UPLOAD_SIZE_PRO=524288000       # 500MB
MAX_UPLOAD_SIZE_BUSINESS=2147483648 # 2GB

# Live Streaming
RTMP_SERVER=rtmp://localhost:1935
STREAM_KEY_PREFIX=eldonia_

# Search Engine
SEARCH_BACKEND=elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=eldonia_nex

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Development Database URLs for different environments
# Use these for switching between local and Docker databases
LOCAL_DATABASE_URL=postgresql://dev_user:dev_password@localhost:5432/eldonia_nex_dev
DOCKER_DATABASE_URL=postgresql://dev_user:dev_password@localhost:5433/eldonia_nex_dev